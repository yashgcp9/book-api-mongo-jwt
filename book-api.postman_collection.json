{
  "info": {
    "name": "Book API (MongoDB + JWT)",
    "_postman_id": "9d9a0e0a-aaaa-bbbb-cccc-1234567890ab",
    "description": "CRUD with JWT auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"you@example.com\", \"password\": \"SuperSecret123\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"you@example.com\", \"password\": \"SuperSecret123\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "me"
          ]
        }
      }
    },
    {
      "name": "List Books",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/books",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Clean Code\", \"author\": \"Robert C. Martin\", \"year\": 2008}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/books",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "Get Book",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/books/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Patch Book",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"year\": 2009}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/books/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Replace Book",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"New Title\", \"author\": \"Anon\", \"year\": 2024, \"tags\": [\"tag\"]}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/books/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Delete Book",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/books/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            ":id"
          ]
        }
      }
    }
  ]
}